// ==UserScript==
// @name Strava - Auto Like
// @namespace http://www.strava.com/
// @description Strava - Auto Like
// @version 2018.01.12
// @grant none
// @match https://www.strava.com/*
// ==/UserScript==

version = '2018.01.12'
var t = window.setInterval(checklikes, 5000)
var t2, t3

div = document.createElement('div')
ds = div.style
ds.color = '#000000' //'black'
ds.backgroundColor = '#eeeeee' //'white'
ds.position = 'fixed'
ds.bottom = '120px'
ds.left = '60px'
ds.zIndex = '5000'
ds.fontSize = '15px'
ds.fontFamily = 'verdana'

d1 = document.createElement('div')
d2 = document.createElement('div')
d3 = document.createElement('div')
d1.id = 'd1'
d1.textContent = '0 like buttons'
d1.style.color = 'red'
d2.id = 'd2'
d2.textContent = 'Scanning for like buttons'
d2.style.color = 'orange'
d3.innerHTML = 'Strava Like v' + version + ' by Tox'
div.appendChild(d1)
div.appendChild(d2)
div.appendChild(d3)
document.body.appendChild(div)

function checklikes(){
  var d1 = document.getElementById('d1')
  var d2 = document.getElementById('d2')
  var jsaddkudo = document.getElementsByClassName('btn btn-icon btn-icon-only btn-kudo btn-xs js-add-kudo')
  var c = jsaddkudo.length
  if (c === 0){
    d1.textContent = 'No like buttons found'
  }
  else {
    d1.textContent = c + ' like buttons.'
    d2.textContent = 'Press F9 to like bomb'
    d2.style.color = 'black'
    window.addEventListener('keydown', k, true )
  }
}

function k(e){
  if (e.keyCode !== 120) return
  window.clearInterval(t)
  d1.textContent = '0 likes given'
  d2.textContent = 'Press ESC to cancel'
  window.removeEventListener('keypress', k)
  window.addEventListener('keypress', checkescape)
  //t2 = window.setInterval(scroll, 1000)
  t3 = window.setInterval(go, 4000)
  window.setTimeout(stop, 600000, 'Auto stop after 10 minutes')
}

function checkescape(e){
  if (e.keyCode === 27)
  stop('Esc pressed')
}

function scroll(){
  window.scrollTo(0,document.body.scrollHeight)
}

function go(){
  var c = 0
  var activity = document.getElementsByClassName('activity')
  while(activity.length !== 0) {
    var jsaddkudo = activity[0].getElementsByClassName('btn btn-icon btn-icon-only btn-kudo btn-xs js-add-kudo')
    if (jsaddkudo.length !== 0) {
      var e = document.createEvent('HTMLEvents')
      e.initEvent ('click', true, true)
      jsaddkudo[0].dispatchEvent(e)
      c++
      d1.textContent = c + ' likes given'
    }
    activity[0].parentNode.removeChild(activity[0])
  }
  stop('The End')
  if (document.getElementsByClassName('empty-state').length !== 0)
  stop('End of feed detected')
}

function stop(reason){
  window.clearInterval(t)
  window.clearInterval(t2)
  window.clearInterval(t3)
  window.removeEventListener('keypress', checkEscape)
  window.removeEventListener('keypress', k)
  d2.textContent = 'Stopped: ' + reason
}
